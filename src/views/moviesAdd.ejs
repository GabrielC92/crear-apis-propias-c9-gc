<!DOCTYPE html>
<html lang="es">

<%- include('partials/head', {title: 'Movie add'}) %>

<body>
    <%- include('partials/header') %>
    <main>
        <figure>
            <img src="/img/logo-DH.png" alt="Logo Digital House">
          </figure>
        <h1 class="titulo">Agregar Película</h1>
        <br>
        <section class="formulario">
            <form class="style-form" action="/movies/create" method="POST">
                <label for="title">Titulo </label>
                <p><input type="text" name="title" id="" value="<%= locals.old && old.title ? old.title : null %>"></p>
                <p><span class="warning"><%= locals.errors && errors.title ? errors.title.msg : null %></span></p>
                <label for="rating">Calificación </label>
                <p><input type="number" name="rating" id="" value="<%= locals.old && old.rating ? old.rating : null %>"></p>
                <p><span class="warning"><%= locals.errors && errors.rating ? errors.rating.msg : null %></span></p>
                <label for="awards">Premios </label>
                <p><input type="number" name="awards" id="" value="<%= locals.old && old.awards ? old.awards : null %>"></p>
                <p><span class="warning"><%= locals.errors && errors.awards ? errors.awards.msg : null %></span></p>
                <label for="release_date">Fecha de creación </label>
                <p><input type="date" name="release_date" id="" value="<%= locals.old && old.release_date ? old.release_date : null %>"></p>
                <p><span class="warning"><%= locals.errors && errors.release_date ? errors.release_date.msg : null %></span></p>
                <label for="length">Duración </label>
                <p><input type="number" name="length" id="" value="<%= locals.old && old.length ? old.length : null %>"></p>
                <p><span class="warning"><%= locals.errors && errors.length ? errors.length.msg : null %></span></p>
                <label for="genreID">Género </label>
                <p>
                    <select name="genre_id" id="">
                        <option value="" disabled selected>- Seleccione el género - </option>
                        <% allGenres.forEach(genre => { %>
                        <option value="<%= genre.id %>" <%= locals.old && old.genre_id == genre.id ? 'selected' : null %> ><%= genre.name %></option>
                        <% }); %>
                    </select>
                    <p><span class="warning"><%= locals.errors && errors.genre_id ? errors.genre_id.msg : null %></span></p>
                </p>
                <br>
                <p> <button class="botonAgregar" type="submit">Agregar</button>
                
                <a class="botonVolver" href="/movies">Listado de Películas</a></p>
            </form>
        </section>
    </main>
    
</body>

</html>